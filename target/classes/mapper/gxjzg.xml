    </resultMap>
    <sql id="gxjzgcol">
        <trim prefix="(" suffix=")" suffixOverrides=",">
             jnm,
            <if test="gh!=null">
            gh,
            </if>
            <if test="dwh!=null">
                dwh,
            </if>
            <if test="xm!=null">
                xm,
            </if>
            <if test="xb!=null">
                xb,
            </if>
            <if test="ssbm!=null">
               ssbm,
            </if>
        </trim>
    </sql>
    <sql id="gxjzgAddValue">
        <trim prefix="(" suffix=")" suffixOverrides=",">
             uuid(),
            <if test="gh!=null">
                #{gh},
            </if>
            <if test="dwh!=null">
                #{dwh},
            </if>
            <if test="xm!=null">
                #{xm},
            </if>
            <if test="xb!=null">
                #{xb},
            </if>
            <if test="ssbm!=null">
                #{ssbm},
            </if>
        </trim>
